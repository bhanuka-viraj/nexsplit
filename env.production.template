# ========================================
# PRODUCTION ENVIRONMENT VARIABLES TEMPLATE
# ========================================
# This file contains all environment variables needed for production deployment
# Copy this file to .env and fill in your actual values
# DO NOT commit the actual .env file to version control (it contains secrets)

# ========================================
# DATABASE CONFIGURATION
# ========================================
# PostgreSQL database connection settings
# Replace 'your-db-host' with your actual database server hostname or IP
SPRING_DATASOURCE_URL=jdbc:postgresql://your-db-host:5432/nexsplit

# Database username for application access
# Should be a dedicated user with appropriate permissions
SPRING_DATASOURCE_USERNAME=your_db_username

# Database password for the application user
# Use a strong, unique password for production
SPRING_DATASOURCE_PASSWORD=your_secure_password

# ========================================
# JWT CONFIGURATION
# ========================================
# Secret key for JWT token signing and validation
# MUST be a strong, random string (at least 64 characters)
# Generate using: openssl rand -base64 64
JWT_SECRET=your-super-secure-jwt-secret-key-here

# JWT token expiration time in minutes
# 3600 = 1 hour, 1440 = 24 hours, 10080 = 1 week
JWT_EXPIRATION=3600

# ========================================
# OAUTH2 CONFIGURATION
# ========================================
# Google OAuth2 Client ID from Google Cloud Console
# Get this from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your-google-client-id

# Google OAuth2 Client Secret from Google Cloud Console
# Keep this secret and secure
GOOGLE_CLIENT_SECRET=your-google-client-secret

# OAuth2 redirect URI for Google authentication
# Should match the URI configured in Google Cloud Console
# Replace 'your-domain.com' with your actual domain
GOOGLE_REDIRECT_URI=https://your-domain.com/login/oauth2/code/google

# ========================================
# APPLICATION CONFIGURATION
# ========================================
# Spring Boot profile for production environment
# This enables production-specific configurations
SPRING_PROFILES_ACTIVE=production

# Frontend application URL for CORS configuration
# Replace with your actual frontend domain
FRONTEND_URL=https://your-frontend-domain.com

# ========================================
# SERVER CONFIGURATION
# ========================================
# Port on which the application will run
# Usually 8080 for Spring Boot applications
SERVER_PORT=8080
